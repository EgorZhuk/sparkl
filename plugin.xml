	<static-paths>
		<static-path url="/cpk/static" localFolder="static"/>
		<static-path url="/cpk/resources" localFolder="resources"/>
	</static-paths>
	<content-types>
		<content-type>
			<title>CPK - (Community Plugin Kick-starter)</title>
			<description>This plugin makes life easier building other plugins!</description>
			<company name="Webdetails" url="http://www.webdetails.pt"></company>
